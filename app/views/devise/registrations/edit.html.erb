<h2>Edycja użytkownika</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.input :name, label: 'Imię', required: true %>
    <%= f.input :password, label: 'Hasło', autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, label: 'Powtórz hasło', required: false %>
    <%= f.input :current_password, label: 'Obecne hasło', hint: "Potrzebne jest obecne hasło do zatwierdzenia zmian", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Zapisz zmiany" %>
  </div>
<% end %>

<h3>Usuń konto</h3>

<p>Jeśli chcesz usunąć konto z serwisu <%= link_to "Usuń konto", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Wróć", :back %>
