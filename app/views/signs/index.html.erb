<p id="notice"><%= notice %></p>

<h1>Listing Signs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Onyomi</th>
      <th>Kunyomi</th>
      <th>Translation</th>
      <th>Sign type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @signs.each do |sign| %>
      <tr>
        <td><%= sign.name %></td>
        <td><%= sign.onyomi %></td>
        <td><%= sign.kunyomi %></td>
        <td><%= sign.translation %></td>
        <td><%= sign.sign_type %></td>
        <td><%= link_to 'Show', sign %></td>
        <td><%= link_to 'Edit', edit_sign_path(sign) %></td>
        <td><%= link_to 'Destroy', sign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

